<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="diccionario.controller.MainViewController"
            stylesheets="@styles/style.css">

    <!-- ENCABEZADO -->
    <top>
        <VBox spacing="15" padding="20" styleClass="header-box">
            <Label text="📘 Diccionario Multilenguaje" styleClass="title-label"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="inputBuscar" promptText="🔍 Buscar palabra..." HBox.hgrow="ALWAYS" styleClass="text-field"/>
                <Button text="Buscar" onAction="#onBuscar" styleClass="primary-button"/>
            </HBox>
        </VBox>
    </top>

    <!-- LISTA CENTRAL -->
    <center>
        <VBox padding="15" spacing="10">
            <ListView fx:id="listaPalabras" styleClass="word-list"/>
        </VBox>
    </center>

    <!-- CONTROLES INFERIORES -->
    <bottom>
        <HBox spacing="12" padding="15" alignment="CENTER" styleClass="footer-box">
            <TextField fx:id="inputAgregar" promptText="➕ Nueva palabra" styleClass="text-field"/>
            <TextField fx:id="inputCategoria" promptText="📖 Categoría gramatical" styleClass="text-field"/>
            <Button text="➕ Agregar" onAction="#onAgregar" styleClass="primary-button"/>
            <Button text="✏️ Editar" onAction="#onEditar" styleClass="secondary-button"/>
            <Button text="🗑️ Eliminar" onAction="#onEliminar" styleClass="danger-button"/>
        </HBox>
    </bottom>

</BorderPane>
