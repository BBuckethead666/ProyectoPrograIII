<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="diccionario.controller.AddWordController"
      spacing="15"
      alignment="CENTER"
      padding="20"
      stylesheets="@styles/style.css"
      styleClass="form-box">

    <!-- Encabezado -->
    <Label text="➕ Agregar Nueva Palabra" styleClass="title-label"/>

    <!-- Campos -->
    <TextField fx:id="inputTexto" promptText="✏️ Ingrese la palabra" styleClass="text-field"/>
    <TextField fx:id="inputCategoria" promptText="📖 Categoría gramatical" styleClass="text-field"/>

    <!-- Botón -->
    <Button text="💾 Guardar" onAction="#onGuardar" styleClass="primary-button"/>

</VBox>
